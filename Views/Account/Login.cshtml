@model Application.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container d-flex justify-content-center align-items-center mt-4">
        <div class="card shadow-lg" style="width: 400px;">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Login</h3>
                <form>
                    <div class="form-group">
                        @Html.Label("Email", "Email or Phone", new { @class = "form-label" })
                        @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email or Phone", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(temp => temp.Password, new { @class = "form-label" })
                        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger" })
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewBag.Error == null)
                    {
                        <div class="alert alert-danger" role="alert">
                            Invalid credentials
                        </div>
                    }
                    <button type="submit" class="btn btn-success btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>


    if (ViewBag.Error != null)
    {
        <div style="color: red; margin-left: 556px; margin-top: 20px;">@ViewBag.Error</div>
    }

}

