<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error
        {
            color:red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">MyApp</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/home/index">Home</a></li>
                @if (User.Identity.IsAuthenticated == false)
                {
                    <li><a class="nav-link" href="/account/register">Register</a></li>
                    <li><a class="nav-link" href="/account/login">Login</a></li>
                }
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li><a class="nav-link" href="/account/EditProfile">Edit Profile</a></li>
                    <li><a class="nav-link" href="/account/logout">Logout</a></li>
                }
            </ul>
        </div>
        </nav>
    
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
